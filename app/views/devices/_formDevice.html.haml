= simple_form_for device , remote: true do |f|
	= f.input :id, disabled: true
	= f.input :type_of_device, disabled: true, collection: Device.type_of_devices.keys
	= f.input :observations
	= f.input :admission_date, as: :date, html5: true
	= f.input :discharge_date, as: :date, html5: true	
	= f.submit 'guardar'