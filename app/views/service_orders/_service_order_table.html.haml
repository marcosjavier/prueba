%table.table
  %tr
    %th= t('.id')
    %th= t('.creation_date')
    %th= t('.last_move_date')
    %th= t('.actual_state')
    %th= t('.customer')
    %th= t('.device')
  - service_orders.each do |os|
    %tr
      %td
        = os.id
      %td
        = os.created_at.strftime('%d-%m-%Y')
      %td
        = os.updated_at.strftime('%d-%m-%Y')
      %td
        = os.status.description if os.status.present?
      %td
        = link_to "View", customer_path(os.customer.id), remote: true
      %td
        = link_to "Device", device_path(os.device.id), remote: true, class: "btn btn-primary" if os.device.present?
      %td
        = link_to "Delete ", service_order_path(os.id), method: :delete, data: {confirm: 'Esta seguro de eliminar este registro??'}
      %td
        = link_to "Edit", edit_service_order_path(os.id), remote: true
      %td
        = link_to "Agregar Movimiento" , service_order_movements_path(os.id)
      
